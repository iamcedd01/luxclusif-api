{
    "name": "kudlit-api",
    "version": "1.0.0",
    "description": "Kudlit API",
    "main": "app.js",
    "scripts": {
        "build-sass": "sass src/public/css/main.scss build/public/css/main.css",
        "build-ts": "tsc",
        "build": "npm run build-sass && npm run build-ts && npm run lint",
        "dev": "npm run build && npm run watch-node",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "serve-debug": "nodemon --inspect build/server.js",
        "serve": "node build/server.js",
        "start": "npm run serve",
        "test": "newman run ./tests/api-tests.postman.json -e ./tests/env-api-tests.postman.json",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "watch-node": "nodemon build/server.js",
        "watch-sass": "sass --watch src/public/css/main.scss build/public/css/main.css",
        "watch-test": "npm run test -- -watchAll",
        "watch-ts": "tsc -w",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/iamcedd01/kudlit-api.git"
    },
    "keywords": [
        "ecommerce",
        "shirt",
        "tops",
        "kudlit",
        "kudlitph",
        "clothing",
        "baybayin"
    ],
    "author": "Cedric Estrada",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/iamcedd01/kudlit-api/issues"
    },
    "homepage": "https://github.com/iamcedd01/kudlit-api#readme",
    "dependencies": {
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-jwt": "^6.1.0",
        "express-rate-limit": "^5.5.0",
        "express-session": "^1.17.2",
        "express-validator": "^6.13.0",
        "helmet": "^4.6.0",
        "jsonwebtoken": "^8.5.1",
        "method-override": "^3.0.0",
        "methods": "^1.1.2",
        "moment": "^2.29.1",
        "mongoose": "^6.0.11",
        "mongoose-paginate-v2": "^1.4.2",
        "mongoose-unique-validator": "^3.0.0",
        "morgan": "^1.10.0",
        "passport": "^0.5.0",
        "passport-local": "^1.0.0",
        "request": "^2.88.2",
        "slug": "^5.1.0",
        "slugify": "^1.6.1",
        "underscore": "^1.13.1",
        "winston": "^3.3.3",
        "winston-daily-rotate-file": "^4.5.5"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.1",
        "@types/compression": "^1.7.2",
        "@types/concurrently": "^6.4.0",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/express-jwt": "^6.0.2",
        "@types/express-rate-limit": "^5.1.3",
        "@types/express-serve-static-core": "^4.17.24",
        "@types/express-session": "^1.17.4",
        "@types/helmet": "^4.0.0",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/mongodb": "^4.0.7",
        "@types/mongoose": "^5.11.97",
        "@types/mongoose-paginate-v2": "^1.4.0",
        "@types/mongoose-unique-validator": "^1.0.5",
        "@types/morgan": "^1.9.3",
        "@types/node": "^16.11.0",
        "@types/passport": "^1.0.7",
        "@types/passport-local": "^1.0.34",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "concurrently": "^6.4.0",
        "eslint": "^8.2.0",
        "newman": "^5.3.0",
        "nodemon": "^2.0.13",
        "sass": "^1.43.4",
        "ts-node": "^10.3.0",
        "tslint": "^6.1.3",
        "typescript": "^4.4.4"
    }
}
